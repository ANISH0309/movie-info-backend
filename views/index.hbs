<div class="jumbotron">
    <div class="container">
        <h1>Movie Info</h1>
        <p>Search for any movie.</p>
    </div>
</div>

<form action="/" method="post" role="form" enctype="application/x-www-form-urlencoded">
    

    <div class="form-group">
        <label for="query">Movie Title</label>
        <input type="text" class="form-control" name="query" id="query">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
{{#if movie.Error}}
    <p>{{movie.Error}}</p>
{{/if}}

{{#if movie.title}}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th></th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td>Title:</td> <td>{{movie.title}}</td>
        </tr>
        <tr>
            <td>Year:</td> <td>{{movie.year}}</td>
        </tr>
        <tr>
            <td>IMDB:</td> <td>{{movie.imdb}}</td>
        </tr>
        <tr>
            <td>Rotten Tomatoes:</td> <td>{{movie.tomatoes}}</td>
        </tr>
        <tr>
            <td>Country:</td> <td>{{movie.country}}</td>
        </tr>
        <tr>
            <td>Plot:</td> <td>{{movie.plot}}</td>
        </tr>
        <tr>
            <td>Actors:</td> <td>{{movie.actors}}</td>
        </tr>
        </tbody>
    </table>
{{/if}}